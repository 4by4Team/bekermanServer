generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Course {
  id             Int      @id @default(autoincrement())
  price          Float
  linkToCourse   String
  backgroundUrl  String
  title          String
  description    String
  createdAt      DateTime @default(now())
  createdBy      DateTime
  updatedAt      DateTime @updatedAt
  updatedBy      DateTime
}

model Category {
  id             Int       @id @default(autoincrement())
  categoryName   String
  articles       Article[]
  createdAt      DateTime  @default(now())
  createdBy      DateTime
  updatedAt      DateTime  @updatedAt
  updatedBy      DateTime
}

model Article {
  id             Int       @id @default(autoincrement())
  title          String
  backgroundUrl  String
  content        String
  categoryId     Int
  category       Category  @relation(fields: [categoryId], references: [id])
  createdAt      DateTime  @default(now())
  createdBy      DateTime
  updatedAt      DateTime  @updatedAt
  updatedBy      DateTime
}

model Testimony {
  id             Int      @id @default(autoincrement())
  title          String
  testimonyName  String
  linkToYoutube  String
  createdAt      DateTime @default(now())
  createdBy      DateTime
  updatedAt      DateTime @updatedAt
  updatedBy      DateTime
}

