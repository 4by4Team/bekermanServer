generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Course {
  id             Int      @id @default(autoincrement())
  title          String
  description    String
  price          Float
  linkToCourse   String
  backgroundUrl  String
  createdAt      DateTime 
  createdBy      String
  updatedAt      DateTime?
  updatedBy      String?
  students        Int    @default(0)
  applicants      Applicant[]

}

model Applicant {
  id                 Int       @id @default(autoincrement())
  firstName          String
  lastName           String
  email              String    @unique
  phone              String
  age                String
  medicalConditions  String?
  goals              String
  experience         String?
  createdAt          DateTime  @default(now())
  // קשר לקורס
  courseId           Int
  course             Course    @relation(fields: [courseId], references: [id])
}

model Category {
  id             Int       @id @default(autoincrement())
  categoryName   String
  articles       Article[]
  createdAt      DateTime
  createdBy      String
  updatedAt      DateTime?
  updatedBy      String?
  count          Int
}

model Article {
  id             Int       @id @default(autoincrement())
  title          String
  backgroundUrl  String
  content        String
  readTime       Int
  categoryId     Int
  category       Category  @relation(fields: [categoryId], references: [id])
  createdAt      DateTime 
  createdBy     String
  updatedAt      DateTime?
  updatedBy      String?
}

model Testimony {
  id             Int      @id @default(autoincrement())
  title          String
  summary  String
  youtubeId  String
  createdAt      DateTime
  createdBy      String
  updatedAt      DateTime? 
  updatedBy      String?
}
